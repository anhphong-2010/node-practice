<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css" />
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
  <% if (prods.length > 0){ %>
  <div class="grid">
    <% for (let product of prods) { %>
      <article style="padding:12px; box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;">
        <div class="centered"><h1><%= product.title %></h1></div>
        <div style="width: 100%; height: 200px;"><img style="width: 100%; object-fit: cover; height: 100%;" src="<%= product.imageUrl %>" /></div>
        <div><p><%= product.description %> </p></div>
        <div style="margin-bottom: 10px;"><%= product.price %></div>
        <div style="display:flex; justify-content:space-around">
          <a href="/products/<%= product.id %>" class="btn">Details</a>
          <%- include('../includes/add-to-cart.ejs', {product: product}) %>
        </div>
      </article>
    <% } %>
  </div>  

  <% } else { %>
  <h1>No products found</h1>
  <% } %>
</main>
<%- include('../includes/end.ejs') %>
